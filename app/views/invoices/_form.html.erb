<div class="col-4 mb-3">
  <%= form_with(model: [@client, @invoice]) do |f| %>
    <% if @invoice.errors.any? %>
      <div class="text-danger">
        <h2> Se han producido los siguientes errores: </h2>
        <ul>
          <% @invoice.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= f.label :name, "Nombre del servicio", class: "form-label" %>
    <%= f.text_field :name, class: "form-control" %><br>

    <%= f.label :started_at, "Fecha de inicio", class: "form-label" %>
    <%= f.date_field :started_at, class: "form-control" %><br>

    <%= f.label :finished_at, "Fecha de corte", class: "form-label" %>
    <%= f.date_field :finished_at, class: "form-control" %><br>

    <%= f.label :disconnected_at, "Fecha límite de pago", class: "form-label" %>
    <%= f.date_field :disconnected_at, class: "form-control" %><br>

    <%= f.label :price, "Costo del servicio", class: "form-label" %>
    <%= f.text_field :price, class: "form-control" %><br>

    <%= f.label :paid_at, "Pagado el día", class: "form-label" %>
    <%= f.date_field :paid_at, class: "form-control" %><br>

    <%= f.label :notes, "Anotaciones", class: "form-label" %>
    <%= f.text_area :notes, class: "form-control" %><br>

    <button type="submit" class="btn btn-primary"><%= yield(:button) %></button>
  <% end %>
</div>
