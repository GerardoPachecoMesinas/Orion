  <%= form_for([@client, @invoice]) do |f| %>
    <% if @invoice.errors.any? %>
      <div class="text-danger">
        <h2> Se han producido los siguientes errores: </h2>
        <ul>
          <% @invoice.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="row justify-content-center">
      <div class="field mb-3 col-4">
        <%= f.label :name, "Nombre del servicio", class: "form-label" %><br />
        <%= f.text_field :name, class: "form-control" %>
      </div>
    </div>

    <div class="row justify-content-center">
      <div class="field mb-3 col-4">
        <%= f.label :started_at, "Fecha de inicio", class: "form-label" %>
        <%= f.date_field :started_at, class: "form-control" %>
      </div>
    </div>

    <div class="row justify-content-center">
      <div class="field mb-3 col-4">
        <%= f.label :finished_at, "Fecha de corte", class: "form-label" %><br />
        <%= f.date_field :finished_at, class: "form-control" %>
      </div>
    </div>

    <div class="row justify-content-center">
      <div class="field mb-3 col-4">
        <%= f.label :disconnected_at, "Fecha límite de pago", class: "form-label" %><br />
        <%= f.date_field :disconnected_at, class: "form-control" %>
      </div>
    </div>

    <div class="row justify-content-center">
      <div class="field mb-3 col-4">
        <%= f.label :price, "Costo del servicio", class: "form-label" %><br />
        <%= f.text_field :price, class: "form-control" %>
      </div>
    </div>
    <div class="row justify-content-center">
      <div class="field mb-3 col-4">
        <%= f.label :paid_at, "Pagado el día", class: "form-label" %><br />
        <%= f.date_field :paid_at, class: "form-control" %>
      </div>
    </div>
    <div class="row justify-content-center">
      <div class="field mb-3 col-4">
        <%= f.label :notes, "Anotaciones", class: "form-label" %><br />
        <%= f.text_area :notes, class: "form-control" %>
      </div>
    </div>
    <div class="row justify-content-center">
      <div class=" col-4">
        <button type="submit" class="btn btn-primary">submit</button>
      </div>
    </div>
  <% end %>
</div>