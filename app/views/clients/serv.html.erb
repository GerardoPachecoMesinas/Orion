<div class= "container-fluid ms-3">
  <div class="row mb-3">
    <div class="col-4">
        <h2>Listado de Servicios</h2>
    </div>
  </div>
</div>

<table class="table table-secondary table-hover table-responsive table-striped">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Nombre</th>
      <th scope="col">Fecha_inicio</th>
      <th scope="col">Fecha_corte</th>
      <th scope="col">Fecha_l√≠mite</th>
      <th scope="col">Costo</th>
      <th scope="col">Fecha_pago</th>
      <th scope="col">Anotaciones</th>
      <th scope="col">Acciones</th>
    </tr>
  </thead>
  <tbody>
    <% @services.each do |service| %>
      <tr>
        <th scope="row"> <%= service.id %></th>
        <td><%= service.name %></td>
        <td><%= service.started_at %></td>
        <td><%= service.finished_at %></td>
        <td><%= service.disconnected_at %></td>
        <td><%= service.price %></td>
        <td><%= service.paid_at %></td>
        <td><%= service.notes %></td>
        <td><%# link_to "ver servicio", edit_client_path(client) %>
            <%= link_to @clients.find(service.client_id).name, client_path(service.client_id), class: "link-dark"  %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>