
<table class="table table-secondary table-hover table-responsive table-striped">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Cliente</th>
      <th scope="col">Servicio</th>
      <th scope="col">Fecha de pago</th>
      <th scope="col">Costo</th>
    </tr>
  </thead>
  <tbody>
    <% @paid_invoices.each do |invoice| %>
      <tr>
        <th scope="row"><%= invoice.client.id %></th>
        <td><%= invoice.client.name %></td>
        <td><%= invoice.name %></td>
        <td><%= invoice.paid_at %></td>
        <td><%= invoice.price %></td>
      </tr>
    <% end %>
    <tr>
      <th scope="row" colspan="4" class="text-end">TOTAL GENERAL DEL MES</th>
      <th scope="row"><%= @total_income %></th>
    </tr>
  </tbody>
</table>
