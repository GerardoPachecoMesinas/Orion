<div class= "container">
  <div class="row justify-content-center mb-3">
    <div class="col-4">
        <h2>Listado de clientes</h2>
    </div>
  </div>
</div>

<table class="table table-secondary table-hover table-responsive table-striped">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Nombre</th>
      <th scope="col">Fecha de Pago</th>
      <th scope="col">Fecha de Corte</th>
      <th scope="col">Status</th>
      <th scope="col">Teléfono</th>
      <th scope="col">Localidad</th>
      <th scope="col">Acciones</th>
    </tr>
  </thead>
  <tbody>
    <% @clients.each do |client| %>
      <tr>
        <th scope="row"> <%= client.id %><br></th>
        <td><%= link_to client.Nombre, client %></td>
        <td><%= client.Fecha_de_pago %></td>
        <td><%= client.Fecha_de_corte %></td>
        <td><%= client.Activo ? "Activo" : "Inactivo" %></td>
        <td><%= client.Teléfono %></td>
        <td><%= client.Localidad %></td>
        <td> <%= link_to "Editar", edit_client_path(client) %>
        <%= button_to "Eliminar", client, method: :delete, data: {confirm: "seguro que quieres eliminar este cliente?" } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
