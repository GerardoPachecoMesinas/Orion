<div class="col-4 mb-3">
  <%= form_with(model: client) do |f| %>
    <% if client.errors.any? %>
      <div class="text-danger">
        <h2>Se han producido los siguientes errores: </h2>
        <ul>
          <% client.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= f.label :name, "Nombre", class: "form-label" %>
    <%= f.text_field :name, class: "form-control" %><br>

    <%= f.label :active, "Activo", class: "form-check-label" %><br>
    <%= f.check_box :active, class: "form-check-input mb-3" %><br>

    <%= f.label :phone, "TelÃ©fono", class: "form-label" %>
    <%= f.text_field :phone, class: "form-control" %><br>

    <%= f.label :location, "Localidad", class: "form-label" %>
    <%= f.text_field :location, class: "form-control" %><br>

    <button type="submit" class="btn btn-primary"><%= yield(:button) %></button>
  <% end %>
</div>
